<?php

    $chute = 0;
    $sorteado = rand(1, 10);

    while($chute != $sorteado){
    
        $chute = (int) readline("digite um numero: ");


    if ($chute == $sorteado) {

        print "\033[1;32mvoce venceu\033[0m\n";
    } else {

        if ($chute > $sorteado) {
            print "\033[1;31mvalor muito alto!\033[0m\n";
        } else {
            print "\033[1;31mvalor muito baixo!\033[0m\n" ;
        }
    }
}

    
